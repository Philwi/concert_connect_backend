<% content_for :style do %>
  <style
    id="Headline"
    fontSize="24"
    fontWeight="bold"
    marginBottom="24"
    marginTop="24"
    paddingRight="24"
  />
  <style
    id="Item"
    alignItems="center"
    borderBottomColor="#eee"
    borderBottomWidth="1"
    flex="1"
    flexDirection="row"
    height="48"
    justifyContent="space-between"
    paddingRight="24"
    paddingBottom="12"
    paddingTop="12"

  />
  <style
    id="ItemDelimiter"
    paddingRight="24"
    paddingBottom="12"
    paddingTop="12"
    fontSize="24"
    fontWeight="bold"
    backgroundColor="#eee"
    color="000"
    alignItems="center"
  />
  <style id="Item__Label" fontSize="18" />
  <style id="Item__Label--small" fontSize="14" color="#666" />
  <style
    id="Spinner"
    flex="1"
    height="48"
    justifyContent="center"
    alignItems="center"
  />
<% end %>

<text style="Headline">
  Upcoming Concerts:
</text>
<list
  id="concert-list"
  trigger="refresh"
  href="<%= mobile_concerts_path(rows_only: true) %>"
  target="concert-list"
  action="replace-inner"
  >
  <%= render partial: 'concerts', locals: { concerts: @concerts, page: @page } %>
</list>


