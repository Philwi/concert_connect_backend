<% content_for :style do %>
  <style
    id="Headline"
    fontSize="24"
    fontWeight="bold"
    marginTop="24"
    paddingRight="24"
    paddingBottom="12"
    color="<%= secondary_color_string %>"
    borderBottomWidth="1"
    borderBottomColor="<%= secondary_color_string %>"
  />
  <style
    id="Item"
    borderBottomColor="<%= secondary_color_string %>"
    backgroundColor="<%= secondary_color_string %>"
    borderWidth="1"
    flex="1"
    justifyContent="space-between"
    flexDirection="row"
    height="128"
    padding="24"
    marginBottom="12"
  />
  <style
    id="Item__Label--main"
    color="<%= primary_color_string %>"
    fontSize="18"
    fontWeight="bold"
    alignSelf="flex-start"
    maxWidth="256"
  />
  <style
    id="Item__Label--sub"
    color="<%= primary_color_string %>"
    fontSize="14"
    alignSelf="flex-start"
    maxWidth="256"
  />
  <style
    id="Item__Delimiter"
    paddingRight="24"
    paddingBottom="12"
    paddingTop="12"
  />
  <style
    id="Item__Navigation"
    height="48"
    width="48"
    marginVertical="8"
    alignSelf="center"
  />
  <style id="Item__Label__Link" color="<%= link_color_string %>" fontSize="18" />
  <style
    id="concert-list"
    paddingBottom="24"
    marginBottom="24"
  />
  <style id="Item__Delimiter__Label" fontSize="24" fontWeight="bold" />
  <style id="Item__Label" fontSize="18" />
  <style id="Item__Label--small" fontSize="14" color="<%= tertiary_color_string %>" />
  <style
    id="Spinner"
    flex="1"
    height="48"
    justifyContent="center"
    alignItems="center"
  />
<% end %>

<text style="Headline">
  Upcoming Concerts:
</text>
<list
  id="concert-list"
  trigger="refresh"
  href="<%= mobile_concerts_path(rows_only: true) %>"
  target="concert-list"
  action="replace-inner"
>
  <%= render partial: 'concerts', locals: { concerts: @concerts, page: @page } %>
</list>


