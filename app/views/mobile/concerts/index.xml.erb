<% content_for :style do %>
  <style
    id="Headline"
    fontSize="24"
    fontWeight="bold"
    marginTop="24"
    paddingRight="24"
    paddingBottom="12"
    color="black"
    borderBottomWidth="1"
    borderBottomColor="black"
  />
  <style
    id="Item"
    alignItems="center"
    borderBottomColor="black"
    backgroundColor="black"
    borderWidth="1"
    flex="1"
    height="96"
    padding="24"
    marginBottom="12"
  />
  <style
    id="Item__Label--main"
    color="#eab308"
    fontSize="18"
    fontWeight="bold"
    alignSelf="flex-start"
  />
  <style
    id="Item__Label--sub"
    color="#eab308"
    fontSize="14"
    alignSelf="flex-start"
  />
  <style
    id="Item__Delimiter"
    paddingRight="24"
    paddingBottom="12"
    paddingTop="12"
  />
  <style
    id="concert-list"
    paddingBottom="24"
    marginBottom="24"
  />
  <style id="Item__Delimiter__Label" fontSize="24" fontWeight="bold" />
  <style id="Item__Label" fontSize="18" />
  <style id="Item__Label--small" fontSize="14" color="#666" />
  <style
    id="Spinner"
    flex="1"
    height="48"
    justifyContent="center"
    alignItems="center"
  />
<% end %>

<text style="Headline">
  Upcoming Concerts:
</text>
<list
  id="concert-list"
  trigger="refresh"
  href="<%= mobile_concerts_path(rows_only: true) %>"
  target="concert-list"
  action="replace-inner"
>
  <%= render partial: 'concerts', locals: { concerts: @concerts, page: @page } %>
</list>


